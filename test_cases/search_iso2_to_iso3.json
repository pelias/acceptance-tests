{
  "name": "ISO2->ISO3 internal conversion",
  "notes": "this test verifies that an iso2 country matches",
  "priorityThresh": 1,
  "endpoint": "search",
  "tests": [
    {
      "id": 1,
      "status": "fail",
      "user": "trescube",
      "type": "dev",
      "description": "record is currently '1 main' in OA",
      "in": {
        "text": "1 Main St, Richlandtown, PA, US"
      },
      "expected": {
        "properties": [
          {
            "layer": "address",
            "country_a": "USA",
            "region": "Pennsylvania",
            "region_a": "PA",
            "locality": "Richlandtown",
            "street": "Main St",
            "housenumber": "1"
          }
        ]
      }
    },
    {
      "id": 1.1,
      "status": "pass",
      "user": "trescube",
      "type": "dev",
      "description": "record is currently '1 main' in OA",
      "in": {
        "text": "1 Main, Richlandtown, PA, US"
      },
      "expected": {
        "properties": [
          {
            "layer": "address",
            "country_a": "USA",
            "region": "Pennsylvania",
            "region_a": "PA",
            "locality": "Richlandtown",
            "street": "Main",
            "housenumber": "1"
          }
        ]
      }
    },
    {
